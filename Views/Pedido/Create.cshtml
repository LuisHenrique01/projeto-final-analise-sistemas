@model IEnumerable<Projeto_Final.Models.Produto>
@{
    ViewData["Title"] = "Create";
}

<div class="container text-center">
    <h4>Pedido</h4>
    <div class="row">
        <div class="col">
            <div class="row">
                @foreach (var item in Model) {
                    <div class="col-md-4">
                        <div class="card" style="max-height: 25rem;margin-top: 25px">
                            <div class="card-body">
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nome)</h5>
                                <p class="card-text">@Html.DisplayFor(modelItem => item.Descricao)</p>
                                <p class="card-text">R$ @Html.DisplayFor(modelItem => item.ValorProduto)</p>
                            </div>
                            <div class="card-footer text-muted">
                                <a href="@Url.Action("Remove", "Carrinho", new { id = item.Id })" class="btn btn-secondary">Remover do carrinho</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="col">
            <h3>Olá @TempData.Peek("UserName").ToString()</h3>
            <p>
                Obrigado por comprar na loja do Luis<br>
                Verifique seu pedido e vamos e pressione em finalizar.
            </p>
            <div class="row">
                <div class="col-md-4 align-self-center">
                    <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="opcao1" checked>
                            <label class="form-check-label" for="exampleRadios1">
                                Radio padrão
                            </label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="opcao2">
                            <label class="form-check-label" for="exampleRadios2">
                                Segundo radio padrão
                            </label>
                        </div>
                        <div class="row justify-content-center">
                            <div class="form-group col-4">
                                <button type="submit" value="Create" class="btn btn-primary mb-4">Entrar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <a href="@Url.Action("ConfirmeCreate", "Pedido")" class="btn btn-primary">Finalizar pedido</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
