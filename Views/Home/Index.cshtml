@model IEnumerable<Projeto_Final.Models.Produto>
@{
    ViewData["Title"] = "Página inicial";
    var CartId = @ViewData["CartId"];
}

<div class="text-center">
    <h1 class="display-4">Loja do Luis</h1>
    @if ( TempData.Peek("UserName") != null ){
        <h3>Bem vindo @TempData.Peek("UserName").ToString()</h3>
    }
    <div class="row">
        @foreach (var item in Model) {
        <div class="col-md-4">
            <div class="card" style="max-height: 25rem;margin-top: 25px">
                <div class="card-body">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Nome)</h5>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Descricao)</p>
                    <p class="card-text">R$ @Html.DisplayFor(modelItem => item.ValorProduto)</p>
                </div>
                <div class="card-footer text-muted">
                    <a href="@Url.Action("Edit", "Carrinho", new { id = item.Id })" class="btn btn-primary">Adicionar ao carrinho</a>
                </div>
            </div>
        </div>
        }
    </div>
</div>
